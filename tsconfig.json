{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "importHelpers": true,
    /* Emit Options */
    "noEmit": false,
    "noEmitOnError": false,
    "noEmitHelpers": false,
    /* Paths */
    "rootDir": "./",
    "outDir": "./out/",
    "declarationDir": "./out/typings",
    "tsBuildInfoFile": "./out/.tsbuildinfo.lib",
    "generateCpuProfile": "./out/profile.cpuprofile",
    /* Declaration and Map Options */
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declarationMap": true,
    /* Compilation Options */
    // "noLib": false,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "removeComments": false,
    "noResolve": false,
    "skipLibCheck": false,
    "importsNotUsedAsValues": "remove",
    /* Experimental Decorators */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "esnext",
      "DOM"
    ],
    "types": [
      "node",
      "jest"
    ],
  },
  "exclude": [
    "./color-convert/",
    "**/dist/",
    "**/out/",
    "./examples/",
    "./images/",
    "./lib/",
    "**/node_modules/",
    "./resources/",
    "./scripts/",
    "./extensions/**",
    "./archives/**",
    "./src/resources/"
  ],
  "include": [
    "./helpers",
    "src/**/*.ts",
    "src/TypeScript/terminal-colors.js",
    // helpers/index.ts
    // "./node_modules/vscode/lib/*"
    // "./node_modules/vscode/vscode.d.ts",,
  ]
}
