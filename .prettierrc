        "lib/tools/color/**/*.*",
        "lib/tests/mock/dummy-list.ts"
      ]
    },
    {
      "options": {
        "printWidth": 70,
        "semi": true
      },
      "files": [
        "lib/utils/**/main.ts",
        "lib/utils/**/sync.ts",
        "lib/utils/**/async.ts",
        "lib/classes/color-element-list/ColorElementList.ts",
        "lib/classes/color-element/ColorElement.ts"
      ]
    }
