{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [["{", "}"], ["[", "]"]],
  "autoClosingPairs": [
    { "open": "{", "close": "}", "notIn": ["string"] },
    { "open": "[", "close": "]", "notIn": ["string"] },
    { "open": "(", "close": ")", "notIn": ["string"] },
    { "open": "/*", "close": "*/", "notIn": ["string"] },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["/", "/"],
    ["*", "*"],
    ["/*", "*/"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*\\/\\/#region\\s*(.*?)\\s*",
      "end": "^\\s*\\/\\*\\s*#endregion\\s*.*\\*\\/"
    }
  }
}
